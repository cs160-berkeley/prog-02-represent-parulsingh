<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#4A125E"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.parulsingh.represent.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="40dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="To find your representatives:"
            android:id="@+id/textView2" />
        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="40dp" />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@mipmap/locaiton"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="Use Current Location"
            android:id="@+id/button"
            android:textColor="#000000" />
        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="40dp" />
        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_height= "2dp"
            android:background="#FFFFFF" />
        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="40dp" />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@mipmap/globe"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:layout_margin="0dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Enter zipcode:"
            android:id="@+id/textView" />

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="0dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="120dp"
                android:layout_margin="0dp"
                android:textColor="#FFFFFF"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editText" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_margin="0dp"
                android:layout_height="wrap_content"
                android:text="Next"
                android:id="@+id/button2" />

        </LinearLayout>
        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="90dp" />
    </LinearLayout>
</RelativeLayout>
